@model GuitarStore.Models.Guitar

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	<style>
		body {
			background-color: #f8f9fa; /* Цвет фона страницы */
		}

		.container {
			margin-top: 50px;
		}

		.form-group {
			margin-bottom: 20px;
		}

		label {
			font-weight: bold;
		}
	</style>
	<title>Rockstar</title>
</head>
<body>
	<div class="container mt-2">
			<h2 class="mb-4">please set the characteristics of the guitar</h2>
			@using (Html.BeginForm("Create", "Guitar", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
			{
				<div class="form-group">
					<label for="GuitarModel">Enter the Guitar Model</label>
					@Html.TextBoxFor(model => model.GuitarModel, new { @class = "form-control", id = "GuitarModel", required = "required" })
				</div>

				<div class="form-group">
					<label for="Price">Enter the Price</label>
					@Html.TextBoxFor(model => model.Price, new { @class = "form-control", id = "Price", required = "required" })
				</div>

				<div class="form-group">
					<label for="GuitarCompany">Enter the GuitarCompany</label>
					@Html.TextBoxFor(model => model.GuitarCompany, new { @class = "form-control", id = "GuitarCompany", required = "required" })
				</div>

				<div class="form-group">
					<label for="GuitarDescription">Enter the GuitarDescription</label>
					@Html.TextBoxFor(model => model.GuitarDescription, new { @class = "form-control", id = "GuitarDescription", required = "required" })
				</div>

				<div class="form-group">
					<label for="Guitarwood">Enter the Guitarwood</label>
					@Html.TextBoxFor(model => model.Guitarwood, new { @class = "form-control", id = "Guitarwood", required = "required" })
				</div>

				<div class="form-group">
					<label for="GuitarPickups">Enter the GuitarPickups</label>
					@Html.TextBoxFor(model => model.GuitarPickups, new { @class = "form-control", id = "GuitarPickups", required = "required" })
				</div>

				<div class="form-group">
					<label for="NumberOfStrings">Enter the NumberOfStrings</label>
					@Html.TextBoxFor(model => model.NumberOfStrings, new { @class = "form-control", id = "NumberOfStrings", required = "required" })
				</div>

				<div class="form-group">
					<label for="StringMaterials">Enter the StringMaterials</label>
					@Html.TextBoxFor(model => model.StringMaterials, new { @class = "form-control", id = "StringMaterials", required = "required" })
				</div>

				<div class="form-group">
					<label for="PhotoUrl">Enter the PhotoUrl</label>
					@Html.TextBoxFor(model => model.PhotoUrl, new { @class = "form-control", id = "PhotoUrl", required = "required" })
				</div>

				<div class="form-group">
					<label for="ListPhotoUrl1">Enter the PhotoUrl</label>
					@Html.TextBoxFor(model => model.ListPhotoUrl1, new { @class = "form-control", id = "ListPhotoUrl1", required = "required" })
				</div>

				<div class="form-group">
					<label for="ListPhotoUrl2">Enter the PhotoUrl</label>
					@Html.TextBoxFor(model => model.ListPhotoUrl2, new { @class = "form-control", id = "ListPhotoUrl2", required = "required" })
				</div>

				<div class="form-group">
					<label for="ListPhotoUrl3">Enter the PhotoUrl</label>
					@Html.TextBoxFor(model => model.ListPhotoUrl3, new { @class = "form-control", id = "ListPhotoUrl3", required = "required" })
				</div>

				<div class="form-group">
					<label for="ListPhotoUrl4">Enter the PhotoUrl</label>
					@Html.TextBoxFor(model => model.ListPhotoUrl4, new { @class = "form-control", id = "ListPhotoUrl4", required = "required" })
				</div>

				<div class="form-group">
					<label for="ListPhotoUrl5">Enter the PhotoUrl</label>
					@Html.TextBoxFor(model => model.ListPhotoUrl5, new { @class = "form-control", id = "ListPhotoUrl5", required = "required" })
				</div>

				<div class="form-group">
					<label for="ListPhotoUrl6">Enter the PhotoUrl</label>
					@Html.TextBoxFor(model => model.ListPhotoUrl6, new { @class = "form-control", id = "ListPhotoUrl6", required = "required" })
				</div>

				<div class="form-group">
					<label for="Count">enter quantity</label>
					@Html.TextBoxFor(model => model.Count, new { @class = "form-control", id = "Count", required = "required" })
				</div>

				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary"/>
				</div>
			}
	</div>
</body>
</html>
