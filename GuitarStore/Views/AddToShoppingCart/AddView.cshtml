@model List<GuitarStore.Models.AddToShoppingCart>

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
	<link rel="stylesheet" href="/MyCss/StyleSheet.css">
</head>
<body>
	<div class="container mt-3">
		<p>Корзина</p>
		<div class="row justify-content-between gap-2">
			@foreach (var add in Model) {
				<div class="col-md-8 d-flex gap-2 navbar-light bg-light justify-content-between rounded-4">
					<div class="d-flex gap-3">
						<img src="@add.Guitar.PhotoUrl" alt="good" style="height: 200px; width: auto;">
						<p>@add.Guitar.GuitarDescription</p>
					</div>
					<div class="price d-flex flex-column">
						<div class="pricePrice">
							<p>@add.Guitar.Price $</p>
						</div>
						<div class="d-flex gap-1">
							<form method="post" action="/Login/Index">
								<input type="hidden" name="guitarId" value="@add.GuitarId">
								<input type="hidden" name="action" value="Like">
								<button type="submit" class="col btn btn-secondary w-100">Like</button>
							</form>
							<form method="post" action="/Login/Index">
								<input type="hidden" name="guitarId" value="@add.GuitarId">
								<input type="hidden" name="action" value="Order">
								<button type="submit" class="col btn btn-primary w-100">Buy</button>
							</form>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</body>
</html>