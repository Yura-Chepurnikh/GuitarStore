@model List<GuitarStore.Models.Like>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="~/MyCss/styles.css">
	<title>Rockstar</title>
</head>
<body>
	<div class="container mt-4 mb-4">
		<div class="row">
			<div class="d-flex align-items-center p-4">
				<h1>you added such a guitar !!!</h1>
			</div>
			@foreach (var guitar in Model)
			{
				string? url = guitar.Guitar.PhotoUrl;
				<div class="col-md-4 mb-4">
					<div class="card">
						<a href="@Url.Action("Details", "Home", new { id = guitar.GuitarId })">
							<img src="@url" class="card-img-top guitar-image" alt="good">
							<div class="d-flex gap-2 align-items-center flex-start mt-2" style="padding-left: 4px">
								<h4 style="color: #353a3d">Guitar Model - </h4>
								<h5 class="card-title" style="color: #353a3d">@guitar.Guitar.GuitarModel</h5>
							</div>
							<p style="color: #353a3d; padding-left: 4px; font-size: 11px">@guitar.Guitar.GuitarDescription</p>
							<div class="d-flex gap-2 align-items-center flex-start" style="padding-left: 4px">
								<h4 style="color : #353a3d">Price - </h4>
								<h5 style="color: #2d3b37">@guitar.Guitar.Price $</h5>
							</div>
						</a>
					</div>
				</div>
			}
		</div>
	</div>
</body>